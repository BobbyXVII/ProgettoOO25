<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="600" stylesheets="@login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane layoutX="0" layoutY="0" prefHeight="400" prefWidth="600" styleClass="background-pane">
         <children>
            <!-- Container principale centrato -->
            <VBox alignment="CENTER" spacing="20" styleClass="login-container">
               <Label styleClass="login-title" text="LOGIN" />

               <TextField fx:id="UsernameLogIn" prefHeight="38.0" prefWidth="391.0" promptText="Username" styleClass="login-input" />

               <PasswordField fx:id="PasswordLogIn" promptText="Password" styleClass="login-input" />

               <Button fx:id="PulsanteLogIn" styleClass="login-button" text="LOG IN" />

               <HBox alignment="CENTER" spacing="5">
                  <Label styleClass="login-info" text="Non sei registrato?" />
                  <Button fx:id="RegistrazioneLogIn" styleClass="login-link" text="Registrati qui!" />
               </HBox>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
