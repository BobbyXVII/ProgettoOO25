<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720" prefWidth="1280" stylesheets="@SignUp.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ControllerLogin">
   <children>
      <HBox prefHeight="720" prefWidth="1280">
         <!-- Pannello laterale blu -->
         <Pane prefHeight="720" prefWidth="300" styleClass="blue-side-panel">
            <children>
               <ImageView fitHeight="400" fitWidth="400" layoutX="-50.0" layoutY="160.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../Immagini/Logo.png" />
                  </image>
               </ImageView>
            </children>
         </Pane>

         <!-- Contenitore centrale -->
         <StackPane alignment="CENTER" prefHeight="720" prefWidth="980">
            <VBox alignment="CENTER" prefHeight="500" prefWidth="400" spacing="20" styleClass="signin-container">
               <Label styleClass="signin-title" text="LOGIN" />

               <VBox alignment="CENTER_LEFT" spacing="10">
                  <Label styleClass="signin-label" text="Username" />
                  <TextField fx:id="UsernameLogIn" promptText="Username" styleClass="signin-input" />
               </VBox>

               <VBox alignment="CENTER_LEFT" spacing="10">
                  <Label styleClass="signin-label" text="Password" />
                  <PasswordField fx:id="PasswordLogIn" promptText="Password" styleClass="signin-input" />
               </VBox>

               <HBox alignment="CENTER" spacing="20">
                  <Button fx:id="RegistrazioneLogIn" styleClass="signin-back-button" text="Registrati qui!" />
                  <Button fx:id="PulsanteLogIn" styleClass="signin-button" text="LOG IN" />
               </HBox>
            </VBox>
         </StackPane>
      </HBox>
   </children>
</AnchorPane>
