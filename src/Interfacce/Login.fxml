<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="600" stylesheets="@SignUp.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefHeight="400" prefWidth="600">
         <!-- Pannello laterale blu -->
         <Pane prefHeight="400" prefWidth="230" styleClass="blue-side-panel">
            <children>
               <ImageView fitHeight="352.0" fitWidth="371.0" layoutX="-81.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../Immagini/Logo.png" />
                  </image></ImageView>
            </children></Pane>

         <!-- Contenitore centrale -->
         <StackPane alignment="CENTER" prefHeight="400" prefWidth="450">
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="328.0" spacing="20" styleClass="signin-container">
               <Label styleClass="signin-title" text="LOGIN" />

               <VBox alignment="CENTER_LEFT" spacing="10">
                  <Label styleClass="signin-label" text="Username" />
                  <TextField fx:id="UsernameLogIn" promptText="Username" styleClass="signin-input" />
               </VBox>

               <VBox alignment="CENTER_LEFT" spacing="10">
                  <Label styleClass="signin-label" text="Password" />
                  <PasswordField fx:id="PasswordLogIn" promptText="Password" styleClass="signin-input" />
               </VBox>

               <HBox alignment="CENTER" spacing="20">
                  <Button fx:id="RegistrazioneLogIn" styleClass="signin-back-button" text="Registrati qui!" />
                  <Button fx:id="PulsanteLogIn" styleClass="signin-button" text="LOG IN" />
               </HBox>
            </VBox>
         </StackPane>
      </HBox>
   </children>
</AnchorPane>
