<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@LoggedIn.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MyProfileController">
   <children>
      <ImageView fitHeight="720" fitWidth="1280" layoutX="0" layoutY="0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Immagini/Sfondo_My_profile.png" />
         </image>
      </ImageView>
      <ImageView fx:id="BackTo" fitHeight="311.0" fitWidth="386.0" layoutX="501.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Immagini/Logo.png" />
         </image>
      </ImageView>

      <Label fx:id="welcomeLabel" layoutX="456.0" layoutY="268.0" styleClass="welcome-text" text="Benvenuto, " textFill="WHITE">
         <font>
            <Font name="Calibri Bold" size="40.0" />
         </font>
      </Label>

      <PasswordField fx:id="Old_Passw" layoutX="481.0" layoutY="328.0" prefHeight="40.0" prefWidth="350.0" promptText="Vecchia Password" />
      <PasswordField fx:id="New_Passw" layoutX="481.0" layoutY="387.0" prefHeight="40.0" prefWidth="350.0" promptText="Nuova Password" />
      <PasswordField fx:id="Confirm_Passw" layoutX="481.0" layoutY="444.0" prefHeight="40.0" prefWidth="350.0" promptText="Conferma Password" />
      <Button fx:id="btn_Disconnect" layoutX="513.0" layoutY="532.0" mnemonicParsing="false" onAction="#handleDisconnect" prefHeight="33.0" prefWidth="123.0" styleClass="button2" text="Disconnect">
         <font>
            <Font name="Calibri" size="17.0" />
         </font>
      </Button>
      <Button fx:id="btn_ModifyInformation" layoutX="676.0" layoutY="532.0" mnemonicParsing="false" onAction="#handleModifyPassword" styleClass="button" text="Salva Modifica">
         <font>
            <Font name="Calibri" size="17.0" />
         </font>
      </Button>
      <Button fx:id="BackLogged" layoutX="5.0" layoutY="5.0" mnemonicParsing="false" styleClass="Tbutton" onAction="#handleHomepage">
         <graphic>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Immagini/home.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
